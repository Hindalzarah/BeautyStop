<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="10dp"
    android:gravity="center">

    <ImageView
        android:id="@+id/cart_product_imageview"
        android:layout_width="100dp"
        android:layout_height="100dp"
        tools:srcCompat="@tools:sample/avatars" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/cart_product_name_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="8dp"
            android:text="TextView"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/cart_product_price_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="8dp"
            android:text="TextView"
            android:textColor="@color/black" />


        <TextView
            android:id="@+id/cart_product_quantity_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="8dp"
            android:text="TextView"
            android:textColor="@color/black" />

        <ImageButton
            android:id="@+id/cart_delete_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@drawable/imageview_boarder"
            android:backgroundTint="@color/white"
            app:srcCompat="@drawable/ic_baseline_delete_24" />
    </LinearLayout>
</LinearLayout>